extends ../layouts/primary-inner.pug

block vars

	-var page = 'progress'

	-var type = 'elements'

block header

	include ../blocks/_mobile-menu/_mobile-menu

	include ../blocks/_header/_header

block promo

	picture
		source(srcset='img/elements.jpg' media='(min-width: 992px)')
		img.img-bg(src='img/elements.jpg' alt='img')

	+promo-primary('Progress Bars')

block main

	section.elements

		.element-holder
			.container
				.row
					.col-12
						h3.element-title Variant 1

			.container
				.row
					.col-xl-8

						// item start
						.progress.progress-simple
							.progress-bar(role='progressbar' style='width: 80%;' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100') Html
						// item end

						// item start
						.progress.progress-simple
							.progress-bar(role='progressbar' style='width: 55%;' aria-valuenow='55' aria-valuemin='0' aria-valuemax='100') Css3
						// item end

						// item start
						.progress.progress-simple
							.progress-bar(role='progressbar' style='width: 90%;' aria-valuenow='90' aria-valuemin='0' aria-valuemax='100') WordPress
						// item end

						// item start
						.progress.progress-simple
							.progress-bar(role='progressbar' style='width: 20%;' aria-valuenow='20' aria-valuemin='0' aria-valuemax='100') jQuery
						// item end

						// item start
						.progress.progress-simple
							.progress-bar(role='progressbar' style='width: 100%;' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100') Photoshop
						// item end

		.element-holder.no-padding-top
			.container
				.row
					.col-12
						h3.element-title Variant 2

			.container
				.row
					.col-xl-8

						// item start
						.bar-holder.tooltip-bar
							span.progress-title Html5
							.progress.progress-tooltip
								.progress-bar.bg-success(role="progressbar" aria-valuenow="75" style='width: 75%;' aria-valuemin="0" aria-valuemax="100")
									span.popover(data-toggle="tooltip" data-placement="top" title="75%")
						// item end

						// item start
						.bar-holder.tooltip-bar
							span.progress-title Css3
							.progress.progress-tooltip
								.progress-bar.bg-info(role="progressbar" aria-valuenow="50" style='width: 50%;' aria-valuemin="0" aria-valuemax="100")
									span.popover(data-toggle="tooltip" data-placement="top" title="50%")
						// item end

						// item start
						.bar-holder.tooltip-bar
							span.progress-title WordPress
							.progress.progress-tooltip
								.progress-bar.bg-warning(role="progressbar" aria-valuenow="90" style='width: 90%;' aria-valuemin="0" aria-valuemax="100")
									span.popover(data-toggle="tooltip" data-placement="top" title="90%")
						// item end

						// item start
						.bar-holder.tooltip-bar
							span.progress-title jQuery
							.progress.progress-tooltip
								.progress-bar.bg-danger(role="progressbar" aria-valuenow="25" style='width: 25%;' aria-valuemin="0" aria-valuemax="100")
									span.popover(data-toggle="tooltip" data-placement="top" title="25%")
						// item end

						// item start
						.bar-holder.tooltip-bar
							span.progress-title Photoshop
							.progress.progress-tooltip
								.progress-bar(role="progressbar" aria-valuenow="100" style='width: 100%; background-color: #D0309D;' aria-valuemin="0" aria-valuemax="100")
									span.popover(data-toggle="tooltip" data-placement="top" title="100%")
						// item end

block footer

	include ../blocks/_footer/_footer