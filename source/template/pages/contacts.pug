extends ../layouts/primary-inner-map.pug

block vars

	-var page = 'contacts'

block header

	include ../blocks/_mobile-menu/_mobile-menu

	include ../blocks/_header/_header

block promo

	picture
		source(srcset='img/contacts.jpg' media='(min-width: 992px)')
		img.jarallax-img.img-bg(src='img/contacts.jpg' alt='img')

	+promo-primary('Our Contacts')

block main

	include ../blocks/_get-in-touch/_get-in-touch

	// map section start

	section.section.map-section.no-padding-top.no-padding-bottom

		include ../blocks/_contacts-banner/_contacts-banner

		#map.map(data-api-key="AIzaSyD5ES8GFHrarPhIVpDhFDea6fPtga0Wy4Y" data-longitude="-9.141827" data-latitude="38.737749" data-marker="img/placeholder.png")

	// map section end

block footer

	include ../blocks/_footer/_footer